<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

	<contextName>spring-cloud-admin-service</contextName>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5level %-4relative --- [%thread] %-40logger{15} : %msg%n</pattern>
		</encoder>
	</appender>

	<!-- 日期滚动 -->
	<appender name="RFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${user.dir}\\admin.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${user.dir}\\admin-%d{yyyy-MM-dd}.log</fileNamePattern>
			<MaxHistory>30</MaxHistory>
		</rollingPolicy>
		<append>true</append>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<!-- <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36}[%line][${SUB_PROJECT}] - %msg%n</pattern> -->
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5level %-4relative --- [%thread] %-40logger{15} : %msg%n</pattern>
		</encoder>
			<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
	</appender>

    <logger name="org.springframework.web" level="DEBUG" />

    <root level="INFO">
			<appender-ref ref="STDOUT" />
			<appender-ref ref="RFILE" />
		</root>

</configuration>